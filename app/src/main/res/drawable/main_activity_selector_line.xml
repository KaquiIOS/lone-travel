<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused -->
    <item android:state_enabled="true" android:state_focused="true">
        <layer-list>
            <item android:bottom="-25dp">
                <shape android:shape="line">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1dp" android:color="@color/common_dim_gray" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default -->
    <item android:state_enabled="false" android:state_focused="false">
        <layer-list>
            <item android:bottom="-25dp">
                <shape android:shape="line">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1dp" android:color="@color/common_gray" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>